%html{ :lang => 'en' }
  = render "_header"
  %body{:onload => "prettyPrint()" }
    .container
      = render "_navigation"
      .content
        = render "_title"
        %div{:role => "main"}
          %article
            %section
              %header
                %a{:href => relative_path_to(@item) }
                  %h2
                    = "#{@item[:title]}"
            = yield
          %section
            = comments(@item)
    = google_analytics @site.config[:analytics_token]
